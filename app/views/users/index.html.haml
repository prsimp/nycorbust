= provide :title, "Users"

.page-header
  %h1 Authorized Users

.row
  .span12
    %table.table.table-bordered
      %thead
        %tr
          %th.span4 Name
          %th.span4 Email
          %th(colspan=3) Actions
      %tbody
        - @users.each do |user|
          %tr
            %td= user.name
            %td= user.email
            %td= link_to "View", user, class: "btn btn-primary"
            %td= link_to "Edit", edit_user_path(user), class: "btn"
            %td= link_to "Delete", user, method: :delete, confirm: "Are you sure?", title: "Delete #{user.name}", class: "btn btn-danger"