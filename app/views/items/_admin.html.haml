.row
  .span12
    %table.table.table-bordered
      %thead
        %tr
          %th Image
          %th Name
          %th Description
          %th Category
          %th Price
          %th(colspan=3) Actions
      %tbody
        - items.each do |item|
          %tr
            %td= link_to image_tag(item.display_image(:thumb), alt: item.name), item_path(item)
            %td= item.name
            %td= item.description
            %td= item.category_name
            %td= number_to_currency(item.price)
            %td= link_to "View", item_path(item), class: "btn btn-primary"
            %td= link_to "Edit", edit_item_path(item), class: "btn"
            %td= link_to "Delete", item_path(item), method: :delete, confirm: "Are you sure?", class: "btn btn-danger"
