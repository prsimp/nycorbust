= provide :title, @category.name

.page-header
  %h1
    = "Items in #{@category.name}"
    -if signed_in?
      %span.pull-right
        = link_to "Admin View", admin_category_path, class: "btn"
        = link_to "Add Item", new_admin_item_path, class: "btn btn-success"


= render 'shared/image_grid', items: @category.items.available