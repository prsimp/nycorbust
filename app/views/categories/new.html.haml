= provide :title, "New Category"

.row
  .span8.offset2
    = form_for @category do |f|
      = render 'shared/error_messages', object: f.object
      %fieldset
        %legend Add New Category
        .control-group
          = f.label :name, class: "control-label"
          .controls
            = f.text_field :name, class: "span8"
        .pull-right
          = f.submit "Create Category", class: "btn btn-large btn-success"
          = link_to "Cancel", categories_path, class: "btn btn-large"

    %h3 Current Categories
    %ul.unstyled
      - @categories.each do |cat|
        %li= cat.name