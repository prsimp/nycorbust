.row
  .span12
    %table.table.table-bordered
      %thead
        %tr
          %th Image
          %th Name
          %th # Items
          %th Listed Items
          %th(colspan=2) Actions
      %tbody
        - @categories.each do |category|
          %tr
            %td
              - if @items.has_key?(category.id)
                = link_to image_tag(@items[category.id].primary_image(:thumb), alt: category.name), category_path(category)
              - else
                = link_to image_tag("default.jpg", alt: category.name), category_path(category)
            %td= category.name
            %td= category.items.count
            %td= category.items.map(&:name).join(", ")
            %td= link_to "View", category_path(category), class: "btn btn-primary"
            %td= link_to "Edit", edit_category_path(category), class: "btn"