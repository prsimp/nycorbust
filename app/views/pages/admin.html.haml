= provide :title, "Admin"

.page-header
  %h1 Admin Panel

.row.page-header
  = link_to "Add Item", new_admin_item_path, class: "btn span2"
  = link_to "View Items", admin_items_path, class: "btn span2"
  = link_to "Add Category", new_admin_category_path, class: "btn span2"
  = link_to "View Categories", admin_categories_path, class: "btn span2"
  = link_to "Add User", new_user_path, class: "btn span2"

.page-header
  .row
    .span12
      %h3.space-bottom Recently Added Items
      %ul.thumbnails
        - @items.each do |item|
          %li.span2
            %a.item_display(href="/items/#{item.id}")
              .thumbnail.thumb
                = image_tag item.primary_image(:small), alt: item.name
